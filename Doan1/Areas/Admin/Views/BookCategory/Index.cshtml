@using Doan1.Models;
@model IList<BookCategory>;
<main id="main" class="main">
    <div class="Pagetitle">
        <h2>Thể loại sách</h2>
    </div>

    <p>
        <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="BookCategory" asp-action="Create">
            <i class="bi bi-file-earmark-text me-1">  Thêm thể loại</i>
        </a>
    </p>

    <section class="section dashboard">
        <div class="row">
            <div col-12>
                <div class="card recent-sales overflow-auto">
                    <div class="card-boy mt-4">
                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th class="col-1 text-center">Mã thể loại</th>
                                    <th class="col-3 text-center">Tên thể loại</th>
                                    <th class="col-1 text-center">Mô tả</th>
                                    <th class="col-1 text-center">Vị trí</th>
                                    <th class="col-1 text-center">Ẩn/Hiện</th>
                                    <th class="col-2 text-center">Chức Năng</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th class="text-center" scope="row">@item.BookCategoryID</th>
                                        <td>
                                            <a asp-area="Admin" asp-controller="Menu" asp-action="Details"
                                               asp-route-id="@item.BookCategoryID" class="text-primary">@item.Name</a>
                                        </td>
                                        <td class="text-center">@item.Description</td>
                                        <td class="text-center">@item.Position</td>
                                        <td class="text-center">@item.IsActive</td>
                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="BookCategory" asp-action="Edit"
                                               asp-route-id="@item.BookCategoryID" class="btn btn-primary btn-sm"
                                               title="Sửa nội dung bài viết">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-area="Admin" asp-controller="BookCategory" asp-action="Delete"
                                               asp-route-id="@item.BookCategoryID" class="btn btn-denger btn-sm"
                                               title="Xóa thông tin bài viết">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </section>
</main>